<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers that haven't been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <div class="text-center">
        <h2> Brand New Burger?</h2>
        <form class="create-form">

          <div class="form-group pl-5">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group pl-5">
            <label for="devoured">Eaten? </label>
            <input type="radio" name="devoured" value="1" checked> I devoured it!
            <input type="radio" name="notdevouredyet" value="0"> I haven't ate this one yet!
          </div>

          <button type="submit">Add burger</button>
        </form>
      </div>
    </div>
  </div>
</div>